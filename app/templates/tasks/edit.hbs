<form>
  <div class="form-group">
    <label>Title</label>
    {{input type = "text" class="form-control" value=model.title placeholder="Add Task..."}}
  </div>
  <div class="form-group">
    <label>Due Date</label>
    {{input type = "date" class="form-control" value=model.date}}
  </div>
  <div class="form-group">
    <label>Description</label>
    {{textarea class ="form-control" value=model.description placeholder="Describe Task..."}}
  </div>
  <button {{action 'editTask' model.id}} class ="btn btn-primary">Submit</button>
</form>


{{#each model as |task|}}
  <div class="well">
    <h4>{{#link-to 'tasks.edit' task.id}}{{task.title}}{{/link-to}}</h4>
    <p>{{task.description}}</p>
    <small>Due: {{format-date task.date}}</small>
  </div>
{{/each}}