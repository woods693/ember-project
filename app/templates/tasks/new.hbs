<form>
  <div class="form-group">
    <label>Title</label>
    {{input type = "text" class="form-control" value=title placeholder="Add Task..."}}
  </div>
  <div class="form-group">
    <label>Due Date</label>
    {{input type = "date" class="form-control" value=date}}
  </div>
  <div class="form-group">
    <label>Description</label>
    {{textarea class ="form-control" value=description placeholder="Describe Task..."}}
  </div>
  <button {{action 'addTask'}} class ="btn btn-primary">Submit</button>
</form>

<h1>Tasks</h1>
{{#each model as |task|}}
  <div class="well" id="">
    <h4>{{#link-to 'tasks.edit' task.id}}{{task.title}}{{/link-to}}</h4>
    <small>Due: {{format-date task.date}}</small>
    <p>{{task.description}}</p>
    <button {{action 'deleteTask' task.id}} class="btn btn-danger">Delete</button>
    {{#each model.comments as |comment|}}
      <p>{{comment}}</p>
    {{/each}}

    <form>
      <div class="form-group">
        <label>Name</label>
        {{input type = "text" class="form-control" value=name placeholder="Name" onchange=(concat value='target.value')}}
      </div>
      <div class="form-group">
        <label>New comment</label>
          {{textarea class="form-control" value=comment}}
      </div>
      <p>{{task.id}}</p>
      <button {{action 'addComment' task.id}} class = "btn btn-primary">Submit</button>
    </form>

  </div>
{{/each}}
